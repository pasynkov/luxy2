{{{breadcrumbs}}}

<!--Shopping Cart-->
<section class="shopping-cart">
    <div class="container">
        <div class="row">

            <!--Items List-->
            <div class="col-lg-9 col-md-9">
                <h2 class="title">Корзина{{^if products}} пуста!{{/if}}</h2>
                {{#if total}}
                    <table class="items-list">
                        <tr>
                            <th>&nbsp;</th>
                            <th>Наименование</th>
                            <th>Цена</th>
                            <th>Количество</th>
                            <th>Всего</th>
                        </tr>

                        {{#each products}}
                            <tr class="item" data-id="{{_id}}">
                                <td class="thumb"><a href="{{url}}"><img src="http://luxy.sexy{{image.path}}" alt="{{title}} {{shortDesc}}" width="152" height="119"/></a></td>
                                <td class="name">
                                    <a href="{{url}}">{{title}}</a><br/>
                                    <small style="font-size:0.6em">{{shortDesc}}</small>
                                </td>
                                <td class="price">{{price}} <span class="fa fa-rouble"></span></td>
                                <td class="qnt-count">
                                    <a class="incr-btn" href="#" data-id="{{_id}}">-</a>
                                    <input class="quantity form-control" type="text" value="{{count}}" data-id="{{_id}}">
                                    <a class="incr-btn" href="#" data-id="{{_id}}">+</a>
                                </td>
                                <td class="total">{{total}} <span class="fa fa-rouble"></span></td>
                                <td class="delete"><i class="icon-delete" onclick="cart.removeById('{{_id}}')"></i></td>
                            </tr>
                        {{/each}}
                    </table>
                {{else}}
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                {{/if}}
            </div>

            <!--Sidebar-->
            <div class="col-lg-3 col-md-3">
                {{#if total}}
                    <h3>Итого</h3>
                    <form class="cart-sidebar" method="post">
                        <div class="cart-totals">
                            <table>
                                <tr>
                                    <td>Товаров на сумму</td>
                                    <td class="total align-r">{{total}} <span class="fa fa-rouble"></span></td>
                                </tr>
                                <tr class="devider"
                                    data-content="{{deliveryMessage}}"
                                    data-html="true"
                                    data-container="body"
                                    >
                                    <td>Доставка <span class="fa fa-question-circle"></span></td>
                                    <td class="delivery align-r">{{#if delivery}}{{delivery}} <span class="fa fa-rouble"></span>{{else}}Бесплатно{{/if}}</td>
                                </tr>
                                <tr>
                                    <td>Общий счет</td>
                                    <td class="order-total total align-r">{{orderTotal}} <span class="fa fa-rouble"></span></td>
                                </tr>
                            </table>
                            {{!
                            <input type="submit" class="btn btn-primary btn-sm btn-block" name="update-cart" value="Update shopping cart">
                            }}
                            <a href="#" class="btn {{^if checkout}}btn-default{{else}}btn-success{{/if}} btn-block" name="to-checkout" onclick="cart.checkout(event)">Оформить заказ</a>
                        </div>
                    </form>
                {{/if}}
            </div>
        </div>
    </div>
</section><!--Shopping Cart Close-->
